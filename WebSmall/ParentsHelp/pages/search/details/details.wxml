<form bindsubmit="formSubmit" bindreset="formReset" report-submit="true" data-num="{{isPush}}">
    <view class="item-view">
        <image src="{{placeData.ImgUrl}}" />
    </view>

    <view class="place_info location">

        <text>名称：</text> <text>{{placeData.OrgName}}\n</text>
        <text>地址：</text> <text>{{placeData.Address}}\n</text>
        <!-- <text>电话：</text> -->
        <text class="callphone" bindtap="calling" data-num="{{placeData.LinkTel}}">电话：{{placeData.LinkTel}}\n  \n </text>
        <text>机构介绍：</text> <text>{{placeData.Content}}\n</text>
        <button formType="submit" class="callphone"> 信息发送到手机</button>

    </view>
</form>