.container {
    flex: 1;
    display: flex;
    flex-direction: column;
}

page {
    height: 100%;
}

.page-body {
    display: flex;
    flex: 1;
    flex-direction: column;
    height: 100%;
    /* 自己定义 */
    color: #757a7e;
    font-family: Menlo, Monaco, Consolas, "Courier New", monospace;
    /* background-color: #f5f5f5;
    border: 1px solid #e3e3e3; */
