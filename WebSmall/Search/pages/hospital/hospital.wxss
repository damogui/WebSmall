/* pages/hospital/hospital.wxss */

@import "../../assets/styles/weui.wxss";

.search_view{
    width: 750rpx;
    /*height: 88rpx;*/
}
.result_view{
    width: 100%;
    flex-grow: 1;
    /*background-color: blue;*/
}
.hos_cell{
    width: 100%;
    border-bottom: 1rpx solid #eee;
    background-color: white;
}
.scroll_view{
    width: 750rpx;
    /*background-color: orange;*/
}
.hos_title{
    margin-top: 16rpx;
    text-align: center;
    font-size: 36rpx;
}
.hos_content{
    width: 100%;
    flex-direction: row;
    margin-top: 16rpx;
    display: flex;
}
.left{
    margin-left: 32rpx;
    font-size: 30rpx;
    width: 100rpx;
    /*background-color: rebeccapurple;*/
}
.content{
    margin-left: 16rpx;
    margin-right: 16rpx;
    font-size: 30rpx;
     width: 80%;
     display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
     
}
.hos_address{
    width: 100%;
     display: flex;
    flex-direction: row;
    margin-top: 16rpx;
}
.address{
    font-size: 28rpx;
    margin: 0 16rpx;
    width: 80%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}